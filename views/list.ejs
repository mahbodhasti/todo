<%- include("header") -%>

<div class="box" id="heading">
	<h1><%= listTitle %></h1>
	<h2><%= day %></h2>
</div>
<form action=""></form>
<div class="box">
	<% newListItems.forEach(function(newListItem){ %>
		<form action="/delete" method="post" >
		 <div class="item">
			<input type="checkbox" value=<%= newListItem._id %> name="checkbox"  onchange="this.form.submit()" />
			<p><%= newListItem.name %></p>
		 </div>
		 <input type="hidden" name="Listname" value="<%= listTitle %>" ></input>
		</form>

	<% }); %>
	<form class="item" action="/" method="POST">
		<input type="text" name="newItem" placeholder="New Item" autocapitalize="on" autocomplete="off" />
		<button type="submit" name="list" value= <%=listTitle %> >+</button>
	</form>
</div>

<%- include("footer") -%>
